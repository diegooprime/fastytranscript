{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fetch-youtube-transcript",
  "version": "3.0.0",
  "title": "FastyTranscript",
  "description": "Fast YouTube transcript fetcher. Copies to clipboard.",
  "icon": "extension_icon.png",
  "author": "apoorv_khandelwal",
  "contributors": [
    "pernielsentikaer",
    "ridemountainpig",
    "diegoships101"
  ],
  "categories": [
    "Media",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "fetch-youtube-transcript",
      "title": "FastyTranscript",
      "description": "Fetch YouTube transcript from clipboard",
      "mode": "view",
      "icon": "extension_icon.png"
    }
  ],
  "preferences": [
    {
      "name": "includeTimestamps",
      "type": "checkbox",
      "required": false,
      "title": "Include Timestamps",
      "description": "Add timestamps to transcript output",
      "default": false,
      "label": "Include Timestamps"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@typescript/native-preview": "^7.0.0-dev.20260218.1",
    "eslint": "^9.22.0",
    "oxfmt": "^0.33.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "node --test tests/*.test.mjs",
    "test:coverage": "node --test --experimental-test-coverage tests/*.test.mjs",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check ."
  },
  "overrides": {
    "cross-spawn": "^7.0.3",
    "got": "^13.0.0",
    "electron": "^32.0.0"
  },
  "platforms": [
    "macOS"
  ]
}
